def signal_handler(signum, frame):
    """Handle shutdown signals"""
    logger.info("Received shutdown signal, cleaning up...")
    
    if health_server:
        health_server.stop()
    
    executor.shutdown(wait=True)
    logger.info("Shutdown complete")
    sys.exit(0)

