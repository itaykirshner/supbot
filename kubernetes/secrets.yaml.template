apiVersion: v1
kind: Secret
metadata:
  name: slack-app-secrets
  namespace: bot-infra
type: Opaque
data:
  # Slack App Configuration
  # Get these from https://api.slack.com/apps
  SLACK_APP_TOKEN: <base64-encoded-slack-app-token>
  SLACK_BOT_TOKEN: <base64-encoded-slack-bot-token>
  
  # LLM API Configuration
  # Your LLM service endpoint (base64 encoded)
  LLM_API_ENDPOINT: <base64-encoded-llm-api-endpoint>
  # Optional API key if your LLM service requires authentication
  LLM_API_KEY: <base64-encoded-llm-api-key-or-empty>

---
apiVersion: v1
kind: Secret
metadata:
  name: confluence-secrets
  namespace: bot-infra
type: Opaque
data:
  # Confluence Configuration
  # Your Confluence instance URL (base64 encoded)
  CONFLUENCE_URL: <base64-encoded-confluence-url>
  # Confluence username (base64 encoded)
  CONFLUENCE_USERNAME: <base64-encoded-confluence-username>
  # Confluence API token (base64 encoded)
  # Generate at: https://id.atlassian.com/manage-profile/security/api-tokens
  CONFLUENCE_API_TOKEN: <base64-encoded-confluence-api-token>
  # Confluence Cloud ID (base64 encoded)
  # Get from: https://developer.atlassian.com/cloud/confluence/rest/v1/api-group-about/
  CONFLUENCE_CLOUD_ID: <base64-encoded-confluence-cloud-id>

