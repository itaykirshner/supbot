apiVersion: v1
kind: Secret
metadata:
  name: zoho-desk-secrets
  namespace: bot-infra
type: Opaque
data:
  # Zoho Desk Configuration
  # Zoho Desk OAuth Client ID (base64 encoded)
  # Get from: https://desk.zoho.com/DeskAPIDocument#Authentication
  ZOHO_CLIENT_ID: <base64-encoded-zoho-client-id>
  # Zoho Desk OAuth Client Secret (base64 encoded)
  ZOHO_CLIENT_SECRET: <base64-encoded-zoho-client-secret>
  # Zoho Desk OAuth Refresh Token (base64 encoded)
  ZOHO_REFRESH_TOKEN: <base64-encoded-zoho-refresh-token>
  # Zoho Desk Organization ID (base64 encoded)
  ZOHO_ORG_ID: <base64-encoded-zoho-org-id>
